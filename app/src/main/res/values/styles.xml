<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAltPrimary</item>
        <item name="colorPrimaryDark">@color/colorAltPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailText">
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="android:textColor">@color/colorTextSub</item>
    </style>

    <style name="DetailTextLabel">
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

</resources>
